<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.hrsoft.vote.home.activity.HomeActivity">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="20sp"
    android:layout_centerInParent="true"
    android:gravity="center"
    android:layout_marginTop="@dimen/txt_label_below_toolbar_margin"
    android:layout_alignParentTop="true"
    android:id="@+id/txt_label_first"
    android:text="@string/txt_home_first_label"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:weightSum="1"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bg_layout_home_header"
        android:layout_below="@id/txt_label_first"
        android:id="@+id/layout_home_header">
        <TextView
            android:layout_weight="0.5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:gravity="start|center"
            android:textSize="18sp"
            android:text="@string/txt_home_header_account"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="0.5"
            android:id="@+id/txt_home_header_account"
            android:layout_height="match_parent"
            android:layout_gravity="end|center"
            android:gravity="end|center"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/layout_home_bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBlack"
        android:layout_alignTop="@+id/layout_home_bottom"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_frame_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@id/layout_home_bottom"
        android:layout_below="@+id/layout_home_header">
    </FrameLayout>
</RelativeLayout>
