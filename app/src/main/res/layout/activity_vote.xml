<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_vote"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="net.hrsoft.vote.home.activity.VoteActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:textSize="12sp"
        android:background="@color/bg_vote_vote_has_selected"
        android:layout_marginBottom="3dp"
        android:layout_above="@+id/layout_vote_bottom"
        android:id="@+id/txt_vote_has_selected"
        android:text="@string/txt_vote_has_selected"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:id="@+id/layout_vote_bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_vote_vote_title"
        android:layout_marginStart="15dp"
        android:layout_marginTop="@dimen/txt_label_below_toolbar_margin"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@id/txt_vote_vote_title"
        android:layout_alignLeft="@id/txt_vote_vote_title"
        android:id="@+id/txt_vote_vote_statue"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/txt_vote_vote_statue"
        android:layout_below="@id/txt_vote_vote_statue"
        android:id="@+id/txt_time"
        android:layout_marginTop="5dp"
        android:text="@string/txt_vote_vote_time"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/txt_time"
        android:layout_toEndOf="@+id/txt_time"
        android:layout_above="@+id/rec_vote_vote"
        android:layout_marginLeft="5dp"
        android:id="@+id/txt_vote_vote_time"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_time"
        android:id="@+id/rec_vote_vote"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_above="@+id/txt_vote_has_selected"
        android:layout_marginLeft="10dp">
    </android.support.v7.widget.RecyclerView>


</RelativeLayout>
